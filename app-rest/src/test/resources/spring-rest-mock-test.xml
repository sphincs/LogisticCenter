<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-3.1.xsd">

    <bean id="driverDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.sphincs.dao.DriverDao"/>
    </bean>

    <bean id="driverService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.sphincs.service.DriverService"/>
    </bean>

    <bean id="tripDao" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.sphincs.dao.TripDao"/>
    </bean>

    <bean id="tripService" class="org.easymock.EasyMock" factory-method="createMock">
        <constructor-arg value="com.sphincs.service.TripService"/>
    </bean>

    <context:component-scan base-package="com.sphincs.rest"/>

</beans>